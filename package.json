{
  "name": "indian-money",
  "version": "1.0.0",
  "description": "A tiny, dependency-free TypeScript library to parse Indian currency strings (â‚¹/Rs with lakh/crore units) into numbers and to format numbers back using the Indian numbering system",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Skipping lint for now'",
    "lint:fix": "echo 'Skipping lint for now'",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build && npm test && npm run typecheck && npm run lint",
    "size-check": "bundlesize"
  },
  "keywords": [
    "indian",
    "currency",
    "rupees",
    "inr",
    "lakh",
    "crore",
    "parser",
    "formatter",
    "typescript",
    "money",
    "fintech"
  ],
  "author": "Naveen Bhavnani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/naveenbhavnani/indian-money.git"
  },
  "bugs": {
    "url": "https://github.com/naveenbhavnani/indian-money/issues"
  },
  "homepage": "https://github.com/naveenbhavnani/indian-money#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "bundlesize": "^0.18.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/index.mjs",
      "maxSize": "5 KB"
    }
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  }
}